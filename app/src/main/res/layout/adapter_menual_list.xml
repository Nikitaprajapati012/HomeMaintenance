<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/adapter_menual_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_1sdp"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_5sdp"
        android:weightSum="2">

        <TextView
            android:id="@+id/adapter_menual_list_txtcategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="category"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/adapter_menual_list_txtbrand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="brand"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/adapter_menual_list_txtmodel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_weight="1.8"
                android:gravity="center|left"
                android:text="model"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/adapter_menual_list_txtpdf"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher"
                android:gravity="center"
                android:layout_weight="0"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

