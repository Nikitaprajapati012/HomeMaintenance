<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_activity_add_home_detailS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/item_name" />

                <EditText
                    android:id="@+id/activity_add_item_et_item_name"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tv_activity_add_home_detailS"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/drawable_border"
                    android:hint="@string/enter_name"
                    android:padding="@dimen/_5sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_activity_add_home_purchase_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/service_description" />

                <EditText
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/activity_add_item_et_service_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tv_activity_add_home_purchase_date"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/drawable_border" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_activity_add_home_purchase_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/service_frequency" />

                <EditText
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/activity_add_item_et_service_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tv_activity_add_home_purchase_price"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/drawable_border" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_activity_add_home_appraised_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/next_service_date" />

                <EditText
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/activity_add_item_et_item_next_service_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tv_activity_add_home_appraised_value"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/drawable_border" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_activity_add_home_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/warn_me" />

                <EditText
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/activity_add_item_et_item_warm_me"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tv_activity_add_home_address"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/drawable_border" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_activity_add_home_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/enter_notes" />

                <EditText
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/activity_add_item_et_item_notes"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tv_activity_add_home_notes"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/drawable_border" />
            </RelativeLayout>



        </LinearLayout>

    </ScrollView>
</RelativeLayout>