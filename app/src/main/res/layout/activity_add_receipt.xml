<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header_add_receipts"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/drawable_header_background">


        <ImageView
            android:id="@+id/header_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back" />


        <TextView
            android:id="@+id/header_tv_header_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/header_tv_edit"
            android:layout_toRightOf="@+id/header_iv_add"
            android:gravity="center"
            android:text="@string/add_receipts"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp" />


        <TextView
            android:id="@+id/header_tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/drawable_button_add"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/Edit"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_add_receipt_gellery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:background="@color/background">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/activity_add_receipt_imageview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity_add_receipt_imgfirst"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/activity_add_receipt_txtcamera"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/ic_action_camera"
                            android:gravity="center"
                            android:padding="@dimen/_20sdp" />

                        <TextView
                            android:id="@+id/activity_add_receipt_txtgallery"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/ic_action_gallery"
                            android:gravity="center"
                            android:padding="@dimen/_20sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity_add_receipt_imgsecond"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/addphoto"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="@string/addphoto1"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>
</LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/activity_add_receipt_firstviewor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/or"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/activity_add_receipt_firstviewaddinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/addinfo"
                    android:textSize="@dimen/_15sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/activity_add_receipt_tv_add_manual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/add_receipt_info"
                android:textColor="@color/blue_light"
                android:textSize="@dimen/_15sdp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/activity_add_receipt_img"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:id="@+id/activity_add_receipt_firstview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/activity_add_receipt_btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:background="@color/light_black"
                        android:text="@string/submit"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/activity_add_receiptmenually_secondview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp"
                    android:weightSum="7">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView

                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/activity_add_receipt_tv_add_manual"
                            android:layout_weight="1"
                            android:text="@string/date_install"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/activity_add_receipt_ed_bought_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:hint="@string/select_date"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/activity_add_receipt_edproduct_and_services"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/activity_add_receiptmenually_spinnerdate"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:hint="@string/product_servise"
                            android:inputType="text"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/activity_add_receipt_edcost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/cost"
                            android:inputType="number"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/activity_releted_spinnerbusiness_service_pro"
                            android:layout_width="match_parent"
                            android:entries="@array/business"
                            android:layout_height="@dimen/_30sdp"
                            android:hint="@string/releted_business_service_pro"
                            android:inputType="text"

                            android:textSize="@dimen/_15sdp" />
                       <!-- <EditText
                            android:id="@+id/activity_releted_edbusiness_service_pro"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableRight="@drawable/ic_forward"
                            android:visibility="gone"
                            android:hint="@string/releted_business_service_pro"
                            android:inputType="text"
                            android:textSize="@dimen/_15sdp" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/activity_add_receipt_tv_add_vendor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text="@string/add_new_vendor"
                            android:textColor="@color/blue_light"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/activity_add_receipt_ednotes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/notes"
                            android:inputType="text"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/activity_add_receipt_btn_submitmanually"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:background="@color/light_black"
                            android:text="@string/submit"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
