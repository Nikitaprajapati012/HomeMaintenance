<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/drawerView"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/blue_light">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center|left"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|left"
                        android:text="@string/home_maintenance"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activity_main_home"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_managehome"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|left"
                        android:text="@string/home_manage"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/background"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/activity_main_txtlocal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_local"
                        android:gravity="center|left"
                        android:text="@string/local_messages"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/background"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/activity_main_homerequest"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_homerequest"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|left"
                        android:text="@string/home_valuation_request"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/background"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/activity_main_connecthomemaintenance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_contacthome"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|left"
                        android:text="@string/connect_home"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/background"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/activity_main_demovideo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_demovideos"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|left"
                        android:text="@string/demo_video"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />


                    <!-- <ExpandableListView
                         android:id="@+id/activity_main_faq"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center|left"
                         android:layout_marginTop="@dimen/_5sdp"
                         android:drawableLeft="@drawable/ic_faq"
                         android:drawablePadding="@dimen/_5sdp"
                         android:gravity="center|left"
                         android:text="@string/faq"
                         android:textColor="@android:color/white"
                         android:textSize="@dimen/_13sdp" />-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/background"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/activity_main_faq"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_faq"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|left"
                        android:text="@string/faq"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/background"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/activity_main_account"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/ic_account"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center|left"
                        android:text="@string/account"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@color/background"
                        android:gravity="center" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/headerview_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/headerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="top"
            android:gravity="top">

            <include layout="@layout/header"></include>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footerview"
            android:layout_below="@+id/headerview"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame_contain_layout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/footerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <include layout="@layout/footer"></include>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>