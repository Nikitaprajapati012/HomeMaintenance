<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_directory_vender_detail_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.AllScreen.DirectoyVendorDetailListFragment">

    <RelativeLayout
        android:id="@+id/header_vender_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/header_detail_list" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_1sdp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    tools:layout_conversion_absoluteHeight="@dimen/_150sdp"
                    tools:layout_conversion_absoluteX="0dp"
                    tools:layout_conversion_absoluteY="0dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background"
                        app:contentScrim="@android:color/transparent"
                        app:layout_scrollFlags="enterAlwaysCollapsed|scroll">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/fragment_directory_vender_detail_list_imglayout"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="26dp"
                                android:layout_marginStart="26dp"
                                android:layout_marginTop="160dp"
                                android:background="@android:color/white"
                                android:fitsSystemWindows="true"
                                android:orientation="vertical"
                                app:layout_collapseMode="pin">

                                <ImageView

                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_90sdp"
                                    android:gravity="center"
                                    android:src="@drawable/ic_placeholder" />

                            </LinearLayout>


                            <ImageView
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center|left"
                                android:layout_marginTop="33dp"
                                android:background="@drawable/ic_company"
                                android:gravity="center|left"
                                android:padding="@dimen/_10sdp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/_130sdp"
                            android:layout_toRightOf="@+id/fragment_directory_vender_detail_list_imglayout"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/fragment_directory_vender_detail_list_txtcategory"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="left"

                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center|left"
                                android:text="@string/category"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_15sdp" />
                        </LinearLayout>

                    </android.support.design.widget.CollapsingToolbarLayout>

                </android.support.design.widget.AppBarLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/appbar"
                    android:layout_marginTop="@dimen/_5sdp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/background"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:id="@+id/fragment_directory_vender_detail_list_imgcall"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_weight="1"
                                android:padding="@dimen/_12sdp"
                                android:src="@drawable/ic_phone" />

                            <ImageView
                                android:id="@+id/fragment_directory_vender_detail_list_imgemail"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_weight="1"
                                android:padding="@dimen/_12sdp"
                                android:src="@drawable/ic_email" />

                            <ImageView
                                android:id="@+id/fragment_directory_vender_detail_list_imgwebsite"

                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_weight="1"
                                android:padding="@dimen/_12sdp"
                                android:src="@drawable/ic_website" />
                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/fragment_directory_vender_detail_list_secondview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_85sdp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/fragment_directory_vender_detail_list_txtcompanyname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left|bottom"
                                android:gravity="center|left|bottom"
                                android:padding="@dimen/_12sdp"
                                android:text="Company name"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fragment_directory_vender_detail_list_txtcontactname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left|top"
                                android:gravity="center|left|top"
                                android:padding="@dimen/_12sdp"
                                android:text="Contact name"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/fragment_directory_vender_detail_list_secondview">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">


                        <android.support.design.widget.TabLayout
                            android:id="@+id/tablayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@android:color/white"
                            android:minHeight="?attr/actionBarSize"
                            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                            app:tabSelectedTextColor="@android:color/black"
                            app:tabTextAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem" />

                        <ScrollView
                            android:layout_below="@+id/tablayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <FrameLayout
                                android:id="@+id/fragment_directory_vender_detail_list_framelayout"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                        </ScrollView>
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>

