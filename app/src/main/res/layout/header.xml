<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:orientation="horizontal"
    android:weightSum="4"
    android:background="@drawable/drawable_header_background">

    <ImageView
        android:id="@+id/header_iv_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/drawable_button_add"
        android:padding="@dimen/_10sdp"
        android:layout_weight="0.1"
        android:src="@drawable/ic_drawer_icon" />

    <TextView
        android:id="@+id/header_tv_headername_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="hello header test"
        android:layout_weight="3.7"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15sdp" />


    <TextView
        android:id="@+id/header_tv_edit_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/drawable_button_add"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_weight="0.1"
        android:text="@string/Edit"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/header_iv_add_main"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/drawable_button_add"
        android:padding="@dimen/_10sdp"
        android:layout_weight="0.1"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_add" />
</LinearLayout>
