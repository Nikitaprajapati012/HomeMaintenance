<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.archi.homemaintenance">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.ActivityAddReceipts"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Activity.ActivityAddHomeDetails"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Activity.ActivityAddHomeImage"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".Activity.ActivityChooseFromContact" />
        <activity android:name=".Activity.ActivityAddVendorManually" />
        <activity
            android:name=".Activity.ActivityAddAppliance"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Activity.ActivityAddCategory"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Activity.ActivityAddHomeMenually"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Activity.ActivityAboutYourHome"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".Activity.ActivityLogin">
        </activity>
        <activity android:name=".Activity.ActivityRegistration" />
        <activity android:name=".Activity.ActivityForgotPassword" />
        <activity android:name=".Activity.ActivityPassword"></activity>
        <activity android:name=".Activity.Test">

        </activity>
    </application>

</manifest>